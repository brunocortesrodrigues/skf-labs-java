schema {
    query: Query
}

type  User{
    id: ID!
    username: String!
    password: String!
    isAdmin: Boolean!
    #posts: [Post!] @relation
}

type Post{
    id: ID!
    title: String!
    body: String!
    author_id: User!
}

type UserInfo{
    id: ID!
    name: String!
    surname: String!
    date_of_birth: String!
    api_key: String!
    userId: Int!
}



type Query{
    singleUser(userId: Int!): [UserInfo]
    users: [User]
}

   
